<h1>Add an item</h1>
<%= form_for [@bag, @item] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.label :quantity %><br />
    <%= f.number_field(:quantity, in: 1..50) %>
  </div>
  <div class="field">
  	<%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary btn-sm" %>
<% end %>