<div class="row">
  <div class="col-md-8">
  	<h1>Rename your bag</h1>
		<%= form_for(@bag) do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="field">
		    <%= f.text_field :name, placeholder: "Name your bag!" %>
		  </div>
		  <%= f.submit "Save changes", class: "btn btn-primary btn-sm" %>
		<% end %>
	</div>
</div>